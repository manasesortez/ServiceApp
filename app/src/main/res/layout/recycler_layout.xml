<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:theme="@style/Theme.Design.NoActionBar"
    android:layout_height="match_parent"
    android:background="#bbc3ce">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentStart="true"
        android:layout_alignParentTop="true"
        android:background="#74c8ed"
        android:layout_marginBottom="10dp"
        android:layout_alignParentLeft="true">

        <TextView
            android:id="@+id/textView8"
            android:layout_width="70dp"
            android:layout_height="wrap_content"
            android:layout_alignParentLeft="true"
            android:layout_alignParentStart="true"
            android:layout_alignParentTop="true"
            android:layout_marginLeft="123dp"
            android:layout_marginStart="123dp"
            android:textSize="17dp"
            android:textColor="@color/negro"
            android:layout_marginTop="27dp"
            android:text="Nombres" />

        <TextView
            android:id="@+id/textView9"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignLeft="@+id/textView8"
            android:layout_alignParentTop="true"
            android:layout_alignStart="@+id/textView8"
            android:layout_marginTop="65dp"
            android:textSize="17dp"
            android:textColor="@color/negro"
            android:text="Apellidos" />

        <TextView
            android:id="@+id/textView10"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignLeft="@+id/textView8"
            android:layout_alignParentTop="true"
            android:layout_alignStart="@+id/textView8"
            android:layout_marginTop="105dp"
            android:textSize="17dp"
            android:textColor="@color/negro"
            android:text="ProfesiÃ³n" />

        <TextView
            android:id="@+id/textView11"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignLeft="@+id/textView8"
            android:layout_alignParentTop="true"
            android:layout_alignStart="@+id/textView8"
            android:layout_marginTop="145dp"
            android:textSize="17dp"
            android:textColor="@color/negro"
            android:text="Salario / Hora" />

        <TextView
            android:id="@+id/textView12"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignLeft="@+id/textView8"
            android:layout_alignParentTop="true"
            android:layout_alignStart="@+id/textView8"
            android:layout_marginTop="187dp"
            android:textSize="17dp"
            android:textColor="@color/negro"
            android:text="Popularidad" />

        <TextView
            android:id="@+id/txtNombre"
            android:layout_width="wrap_content"
            android:textColor="@color/negro"
            android:layout_height="wrap_content"
            android:layout_alignParentEnd="true"
            android:layout_alignParentRight="true"
            android:layout_alignTop="@+id/textView8"
            android:layout_marginEnd="44dp"
            android:layout_marginRight="44dp"
            android:text="TextView" />

        <TextView
            android:id="@+id/txtApellido"
            android:layout_width="wrap_content"
            android:textColor="@color/negro"
            android:layout_height="wrap_content"
            android:layout_alignLeft="@+id/txtNombre"
            android:layout_alignStart="@+id/txtNombre"
            android:layout_alignTop="@+id/textView9"
            android:text="TextView" />

        <TextView
            android:id="@+id/txtProfesion"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textColor="@color/negro"
            android:layout_alignLeft="@+id/txtNombre"
            android:layout_alignStart="@+id/txtNombre"
            android:layout_alignTop="@+id/textView10"
            android:text="TextView" />

        <TextView
            android:id="@+id/txtSalario"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textColor="@color/negro"
            android:layout_alignStart="@+id/txtNombre"
            android:layout_alignTop="@+id/textView11"
            android:text="TextView"
            android:layout_alignLeft="@+id/txtNombre" />

        <TextView
            android:id="@+id/txtPopularidad"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textColor="@color/negro"
            android:layout_alignLeft="@+id/txtSalario"
            android:layout_alignStart="@+id/txtSalario"
            android:layout_alignTop="@+id/textView12"
            android:text="TextView" />

        <ImageView
            android:id="@+id/imageView2"
            android:layout_width="95dp"
            android:layout_height="230dp"
            android:layout_alignParentLeft="true"
            android:layout_alignParentStart="true"
            android:layout_alignParentTop="true"
            android:layout_marginLeft="10dp"
            app:srcCompat="@drawable/profile" />

        <Button
            android:layout_width="107dp"
            android:layout_height="62dp"
            android:layout_below="@+id/textView12"
            android:layout_centerHorizontal="true"
            android:layout_marginTop="20dp"
            android:layout_marginBottom="20dp"
            android:background="@drawable/button_background"
            android:onClick="Contratar"
            android:text="Contratar" />

    </RelativeLayout>
</RelativeLayout>